@model IEnumerable<Frelsex.Models.Spedizione>

<h2>Risultati della ricerca</h2>

@if (Model.Count() == 0)
{
    <p>Nessuna spedizione trovata.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Numero Spedizione</th>
                <th>Data Spedizione</th>
                <th>Stato</th>
                <th>Dettagli</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var spedizione in Model)
            {
                <tr>
                    <td>@spedizione.NumeroIdentificativo</td>
                    <td>@spedizione.DataSpedizione.ToString("dd/MM/yyyy")</td>
                    <td>@spedizione.Stato</td>
                    <td>@Html.ActionLink("Vedi dettagli", "Details", new { id = spedizione.ID })</td>
                </tr>
            }
        </tbody>
    </table>
}
